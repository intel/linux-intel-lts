diff --git a/mm/migrate.c b/mm/migrate.c
index c93dd6a31c31..e5ca92007844 100644
--- a/mm/migrate.c
+++ b/mm/migrate.c
@@ -2154,6 +2154,14 @@ static int numamigrate_isolate_page(pg_data_t *pgdat, struct page *page)
 			if (managed_zone(pgdat->node_zones + z))
 				break;
 		}
+
+		/*
+		 * If there are no managed zones, it should not proceed
+		 * further.
+		 */
+		if (z < 0)
+			return 0;
+
 		wakeup_kswapd(pgdat->node_zones + z, 0, order, ZONE_MOVABLE);
 		return 0;
 	}
