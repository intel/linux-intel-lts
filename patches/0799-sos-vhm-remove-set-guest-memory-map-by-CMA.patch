-static void guest_vm_open(struct vm_area_struct *vma)
-{
-	struct vhm_vm *vm = vma->vm_file->private_data;
-	struct guest_memseg *seg = vma->vm_private_data;
-
-	mutex_lock(&vm->seg_lock);
-	seg->vma_count++;
-	mutex_unlock(&vm->seg_lock);
-}
-
