-		}
-		guest_gpa = seg->gpa;
-		host_gpa = seg->vm0_gpa;
-		mem_type = MEM_TYPE_WB;
-		mem_access_right = (memmap->prot & MEM_ACCESS_RIGHT_MASK);
-		type = MAP_MEM;
-	} else {
