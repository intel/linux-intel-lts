-	struct guest_memseg *seg;
-
-	mutex_lock(&vm->seg_lock);
-	list_for_each_entry(seg, &vm->memseg_list, list) {
-		if (seg->vma_count == 0)
-			continue;
-
-		mutex_unlock(&vm->seg_lock);
-		return -EAGAIN;
-	}
-	mutex_unlock(&vm->seg_lock);
-	return 0;
 }
 
