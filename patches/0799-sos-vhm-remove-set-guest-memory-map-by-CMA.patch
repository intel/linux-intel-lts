 		pr_warn("vm_list corrupted\n");
-		return -ESRCH;
+		return ret;
 	}
 
 	if (vm->hugetlb_enabled)
 		ret = hugepage_unmap_guest_phys(vm, guest_phys);
-	else
-		ret = do_unmap_guest_phys(vm, guest_phys);
 
 	put_vm(vm);
 	return ret;
