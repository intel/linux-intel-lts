+	guest_gpa = memmap->gpa;
+	host_gpa = acrn_hpa2gpa(memmap->hpa);
+	mem_type = MEM_TYPE_UC;
+	mem_access_right = (memmap->prot & MEM_ACCESS_RIGHT_MASK);
