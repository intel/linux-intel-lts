 	case SKL_TKN_U32_PMODE:
 	case SKL_TKN_U32_PIPE_DIRECTION:
 	case SKL_TKN_U32_NUM_CONFIGS:
-		if (is_pipe_exists) {
+		if (!is_pipe_exists) {
 			ret = skl_tplg_fill_pipe_tkn(dev, mconfig->pipe,
