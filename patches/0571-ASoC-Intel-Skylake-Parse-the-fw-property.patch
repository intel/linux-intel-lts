+	SKL_MAX_ASTATE_COUNT,
+	SKL_MAX_MODULE_PIN_COUNT,
+	SKL_MODULES_COUNT,
+	SKL_MAX_MOD_INST_COUNT,
+	SKL_MAX_LL_TASKS_PER_PRI_COUNT,
+	SKL_LL_PRI_COUNT,
+	SKL_MAX_DP_TASKS_COUNT,
+	SKL_MAX_LIBS_COUNT,
+	SKL_SCHEDULER_CONFIG,
