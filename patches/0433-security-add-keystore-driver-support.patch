+			__func__, res);
+		return res;
+	}
+
+	memcpy(input + KEYSTORE_MAX_CLIENT_ID_SIZE,
+			client_ticket, KEYSTORE_CLIENT_TICKET_SIZE);
+
+	res = send_and_receive(commandId, input, sizeof(input),
+		&out_buf, &output_len, &response_code);
