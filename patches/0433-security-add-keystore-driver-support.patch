+static int pack_int_to_buf(unsigned int i, unsigned char *buf)
+{
+	/* integers are represented by 2 bytes currently */
+	if (i >= 0x10000)
+		return -EFAULT;
+	buf[0] = i & 0xFF;
+	buf[1] = (i >> 8) & 0xFF;
+
+	return 0;
+}
