+	do {
+		msleep(100);
+		timeout++;
+	} while ((slave->slv_addr->status == SDW_SLAVE_STAT_NOT_PRESENT) &&
+		timeout < 20);
+
+	if (slave->slv_addr->status == SDW_SLAVE_STAT_NOT_PRESENT)
+		return -EBUSY;
+	return 0;
