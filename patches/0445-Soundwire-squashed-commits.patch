+int sdw_cfg_slv_enable_disable(struct sdw_bus *mstr_bs,
+	struct sdw_slave_runtime *slv_rt_strm,
+	struct sdw_port_runtime *port_slv_strm,
+	struct port_chn_en_state *chn_en)
+{
+	struct sdw_msg wr_msg, rd_msg;
