+	if (!sdw->pdm_streams)
+		return -ENOMEM;
+
+	sdw->num_in_pdm_streams = (pdm_cap >> CNL_PDMSCAP_ISS_SHIFT) &
+			CNL_PDMSCAP_ISS_MASK;
+	/* Zero based value in register */
+	sdw->num_in_pdm_streams++;
+	sdw->in_pdm_streams = devm_kzalloc(&mstr->dev,
