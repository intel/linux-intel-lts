+    strlcpy(caps.dev_model, IPU_MEDIA_DEV_MODEL_NAME,
+	    sizeof(caps.dev_model));
+
+    psys->ctx = fe_ctx;
 
     pr_info("psys probe minor: %d\n", minor);
 
