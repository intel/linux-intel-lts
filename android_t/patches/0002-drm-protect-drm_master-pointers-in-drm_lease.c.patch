 	struct file *lessor_file = lessor_priv->filp;
@@ -508,10 +535,6 @@ int drm_mode_create_lease_ioctl(struct drm_device *dev,
 	if (!drm_core_check_feature(dev, DRIVER_MODESET))
 		return -EINVAL;
 
-	/* Do not allow sub-leases */
-	if (lessor->lessor)
-		return -EINVAL;
-
 	/* need some objects */
 	if (cl->object_count == 0)
