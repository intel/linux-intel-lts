config INTEL_IPU4_BXT_P_PDATA
	bool "Enable built in platform data for Broxton-P"
	depends on VIDEO_INTEL_IPU && VIDEO_INTEL_IPU4
	help
		Pre-ACPI system platform data is compiled inside kernel

