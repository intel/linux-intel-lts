index 714ce3200c4e..1a2f09837f8d 100644
--- a/mm/memory.c
+++ b/mm/memory.c
@@ -1300,12 +1300,12 @@ int
 copy_page_range(struct vm_area_struct *dst_vma, struct vm_area_struct *src_vma)
 {
 	pgd_t *src_pgd, *dst_pgd;
-	unsigned long next;
